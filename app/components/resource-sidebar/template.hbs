
<div class="sidebar-header">
  {{#link-to 'stack' stack class="back-to-stack"}}
    <i class="fa fa-chevron-left"></i>
    <h3>{{stack.handle}}</h3>
  {{/link-to}}
</div>

{{#if stack.apps}}
  <ul class="nav sidebar-nav">
    <li class="title">
      {{link-to 'Apps' 'apps' stack classNames='title-link'}}

      {{#aptible-ability scope="manage" user=user permittable=stack as |hasAbility|}}
        {{#if hasAbility}}
          {{#link-to 'apps.new' stack }}
            {{#bs-tooltip title='Create new app'}}
              <i class="fa fa-plus"></i>
            {{/bs-tooltip}}
          {{/link-to}}
        {{/if}}
      {{/aptible-ability}}
    </li>

    {{#each stack.apps as |app|}}
      {{#link-to 'app' app tagName="li"}}
        {{link-to app.handle 'app' app bubbles=false}}
      {{/link-to}}
    {{/each}}
  </ul>
{{/if}}

{{#if stack.databases}}
  <ul class="nav sidebar-nav">
    <li class="title">
      {{link-to 'Databases' 'databases' stack classNames='title-link'}}

      {{#aptible-ability scope="manage" user=user permittable=stack as |hasAbility|}}
        {{#if hasAbility}}
          {{#link-to 'databases.new' stack}}
            {{#bs-tooltip title='Create new database'}}
              <i class="fa fa-plus"></i>
            {{/bs-tooltip}}
          {{/link-to}}
        {{/if}}
      {{/aptible-ability}}
    </li>

    {{#each stack.databases as |database|}}
      {{#link-to 'database' database tagName="li"}}
        {{link-to database.handle 'database' database bubbles=false}}
      {{/link-to}}
    {{/each}}
  </ul>
{{/if}}