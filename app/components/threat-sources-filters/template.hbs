<div class="form-group">
  <label class="risk-assessment__filters__label">Sort by</label>
  <select class="form-control input-sm sort" {{action 'update' on="change"}}>

    {{#each sorts as |sort|}}
      <option value={{sort.value}} selected={{if (eq filters.sort sort.value) true false}}>
        {{sort.title}}
      </option>
    {{/each}}
  </select>
</div>

<div class="form-group">
  <label class="risk-assessment__filters__label">Adversarial</label>
  <select class="form-control input-sm adversarial" {{action 'update' on="change"}}>
    <option value="any" selected={{if (eq filters.adversarial 'any') true null}}>Any</option>
    <option value="1">Adversarial</option>
    <option value="0">Non-Adversarial</option>
  </select>
</div>


<div class="form-group">
  <label class="risk-assessment__filters__label">Search</label>
  <i class="fa fa-search"></i>

  {{one-way-input
    type="search"
    class="risk-assessment__search-input form-control input-sm"
    update=(action (mut filters.search))
    value=filters.search}}
</div>

{{#if showClear}}
  <div class="form-group">
    <label class="risk-assessment__filters__label">&nbsp;</label>
    <a href="" {{action 'clear'}} class="risk-assessment__filters__clear">Clear Filters</a>
  </div>
{{/if}}