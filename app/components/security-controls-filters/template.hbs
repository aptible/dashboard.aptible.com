<div class="form-group">
  <label class="risk-assessment__filters__label">Implementation Status</label>
  <select class="form-control input-sm status" {{action 'update' on="change"}}>
    <option value="" selected={{if (not filters.status) true null}}>Any</option>
    {{#each statuses as |status|}}
      <option value={{status.value}} selected={{if (eq filters.status status.value) true false}}>
        {{status.title}}
      </option>
    {{/each}}
  </select>
</div>


<div class="form-group">
  <label class="risk-assessment__filters__label">Search</label>
  <i class="fa fa-search"></i>

  {{one-way-input
    type="search"
    class="risk-assessment__search-input form-control input-sm"
    update=(action (mut filters.search))
    value=filters.search}}
</div>

{{#if showClear}}
  <div class="form-group">
    <label class="risk-assessment__filters__label">&nbsp;</label>
    <a href="" {{action 'clear'}} class="risk-assessment__filters__clear">Clear Filters</a>
  </div>
{{/if}}