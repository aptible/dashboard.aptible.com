{{#save-progress progress=saveProgress progressMessage="Provisioning your new environment..."}}
  <div class="page-header">
    <h1>Step 3: Add a Payment Method</h1>
  </div>

  <div class="signup-form">
    <div class="row">
      <div class="col-xs-6 col-lg-5 col-lg-offset-1">

        <div class="panel panel-focused">
          <div class="panel-heading">
            <h3>Add a credit card</h3>
          </div>
          <div class="panel-body">
            <form role="form" class="payment-form">
              {{#if error}}
                {{#bs-alert alert="danger"}}
                  <p>{{error}}</p>
                {{/bs-alert}}
              {{/if}}

              <div class="form-group">
                {{input class="form-control" value=model.name name="name" placeholder="Name on card"}}
              </div>

              <div class="form-group">
                {{input class="form-control number" value=model.number name="number" placeholder="Card number"}}
                {{input class="form-control cvc" value=model.cvc name="cvc" placeholder="CVC" }}
              </div>

              <div class="form-group">
                <div class="expiration-fields">
                  <div class="expiration-month">
                    {{select-month value=model.expMonth name="exp-month" prompt="Exp month"}}
                  </div>
                  <div class="expiration-year">
                    {{select-year value=model.expYear name="exp-year" prompt="Exp year"}}
                  </div>
                </div>

                {{input class="form-control zip" value=model.zip name="zip" placeholder="ZIP"}}
              </div>

              <button class="btn btn-primary btn-block btn-lg" {{action 'create' model}}>Save</button>
            </form>
          </div>
        </div>

      </div>
      <div class="col-xs-6 col-lg-5">
        <div class="welcome-info">
          {{plan-description app=firstApp plan=firstApp.plan}}
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-lg-10 col-lg-offset-1">
        {{change-plan value=firstApp.plan}}
      </div>
    </div>

    <div class="row">
      <div class="signup-progress-wrapper">
        <ul class="signup-progress-indicator">
          <li></li>
          <li></li>
          <li class="active"></li>
        </ul>
      </div>
    </div>
  </div>
{{/save-progress}}
